<div id="index_item" class="footnote panel panel-default">
  <div class="panel-heading">
    <div class="panel-title clearfix">

        <span class="pull-right">
          <%= link_to edit_referential_footnote_path(@referential, footnote), :class => "btn btn-default btn-sm" do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to referential_footnote_path(@referential, footnote), :method => :delete, :data => {:confirm =>  t('footnotes.actions.destroy_confirm')}, :class => "btn btn-danger btn-sm" do %>
            <span class="fa fa-trash-o"></span>
          <% end %>
        </span>

      <h5>
        <%= link_to([@referential, footnote], :class => "preview", :title => "#{footnote.code}") do %>
        <span class="xmlns">
          <%= footnote.code %>
        </span>
        <% end %>
      </h5>
    </div>
  </div>
  <div class="panel-body">
    <p>
    <%= footnote.label %>
    </p>
  </div>
</div>

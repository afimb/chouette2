<div id="index_item" class="destination_display panel panel-default">
  <div class="panel-heading">
    <div class="panel-title clearfix">
      <% if policy(:application).write? %>
        <span class="pull-right">
          <%= link_to edit_referential_destination_display_path(@referential, destination_display), :class => "btn btn-default btn-sm" do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to referential_destination_display_path(@referential, destination_display), :method => :delete, :data => {:confirm =>  t('destination_displays.actions.destroy_confirm')}, :class => "btn btn-danger btn-sm" do %>
            <span class="fa fa-trash-o"></span>
          <% end %>
        </span>
      <% end %>
      <h5>
        <%= link_to([@referential, destination_display], :class => "preview", :title => "#{destination_display.name}") do %>
        <span class="xmlns">
          <%= destination_display.name %>
        </span>
        <% end %>
      </h5>
    </div>
  </div>
  <div class="panel-body">
    <p><%= t('.front_text') %>: <%= destination_display.front_text %></p>
    <p><%= t('.side_text') %>: <%= destination_display.side_text %></p>
    <p>
    <%= t('.vias') %>: <% unless destination_display.vias.blank? %>
        <% destination_display.vias.each do |via| %>
          <span class="label label-default via"><%= via.front_text %></span>
        <% end %>
      <% end %>
    </p>
    <p>
      <%= t('.stop_points') %>: <% unless destination_display.stop_points.blank? %>
        <% destination_display.stop_points.each do |stop_point| %>
          <span class="label label-default via"><%= stop_point.name %></span>
        <% end %>
      <% end %>
    </p>
  </div>
</div>
